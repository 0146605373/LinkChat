<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    >

    <include layout="@layout/ui_action_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:background="#ebecee"
        >
        <LinearLayout
            android:id="@+id/message_bar"
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/emoj"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/emoj"
                />
            <ImageView
                android:id="@+id/add_more"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/add_more"
                />
            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                style="@style/chatting_detail_input_text_style"
                />
            <TextView
                android:id="@+id/send"
                android:layout_width="64dip"
                android:layout_height="40dip"
                android:padding="2dip"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="16dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/send_button"
                android:gravity="center"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/voice_send"
                android:layout_width="64dip"
                android:layout_height="40dip"
                android:padding="2dip"
                android:src="@drawable/voice_nor"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/send_button_background"
                android:gravity="center"
                />
            </LinearLayout>
        <com.link.platform.ui.component.ViewScroller
            android:id="@+id/emoj_menu"
            android:layout_below="@id/message_bar"
            android:layout_width="match_parent"
            android:layout_height="152.0dip"
            android:visibility="gone"
            android:layout_marginTop="12dip"
            >
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="7"
                android:verticalSpacing="12dp"
                android:horizontalSpacing="10dp"
                android:id="@+id/grid_emoj"
                android:gravity="center"
                android:listSelector="#00000000"
                >

            </GridView>
            </com.link.platform.ui.component.ViewScroller>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="152dip"
            android:id="@+id/grid_add_more"
            android:layout_below="@id/message_bar"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:numColumns="3"
            android:scrollbars="none"
            android:visibility="gone"
            android:verticalSpacing="12dp"
            android:listSelector="#00000000"
            >
        </GridView>
        <RelativeLayout
            android:id="@+id/voice_panel"
            android:layout_width="match_parent"
            android:layout_height="152.0dip"
            android:layout_below="@id/message_bar"
            android:visibility="gone"
            >


            <ImageView
                android:id="@+id/audio_record_button"
                android:layout_width="96dip"
                android:layout_height="96dip"
                android:layout_centerInParent="true"
                android:src="@drawable/audio_record_bg"
                />
            <ImageView
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_centerInParent="true"
                android:src="@drawable/audio_panel_microphone"
                />
            <TextView
                android:id="@+id/audio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_above="@id/audio_record_button"
                android:text="@string/audio_hint"
                android:textColor="@color/panel_font_color"
                android:layout_marginBottom="5dip"
                />
            <ImageView
                android:id="@+id/audio_cancel"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/audio_delete"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/audio_record_button"
                android:layout_marginLeft="36dip"
                android:visibility="gone"
                />
            </RelativeLayout>
        </RelativeLayout>
    <ListView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/toolbar"
        android:layout_marginTop="45dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dip"
        android:scrollbars="none"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:listSelector="#00000000"
        >
    </ListView>
</RelativeLayout>
