<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppStyle" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#eeeeee</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="DefaultAppStyle" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MySpinnerStyle</item>
        <item name="android:actionMenuTextColor">@color/action_bar_text_color</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#f0f0f0</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="help_text_style">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="NoTitleAppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActivityAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="chatting_detail_input_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/white_background_light_gray_border_5_radius</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:maxLines">4</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLength">1024</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
