<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.link.platform.activity.LoginActivity">

    <ImageView
        android:layout_marginTop="48dip"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:src="@drawable/login_pic"
        />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:textColor="@color/content_hint"
        android:text="@string/login_hint"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dip"
        />
    <EditText
    android:layout_below="@+id/login_text"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:singleLine="true"
    android:textColor="@color/new_title_color"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:hint="@string/login_remark"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/activity_login_name_edit"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_above="@+id/activity_submit_button"
        >
    </View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_submit_button"
        android:text="确定"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:textColor="@color/new_title_color"
        />
</RelativeLayout>
