<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    >

    <include layout="@layout/ui_action_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:background="#ebecee"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/emoj"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/emoj"
                />
            <ImageView
                android:id="@+id/add_more"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/add_more"
                />
            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                style="@style/chatting_detail_input_text_style"
                />
            <TextView
                android:id="@+id/send"
                android:layout_width="64dip"
                android:layout_height="40dip"
                android:padding="2dip"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="16dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/send_button"
                android:gravity="center"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/voice_send"
                android:layout_width="64dip"
                android:layout_height="40dip"
                android:padding="2dip"
                android:src="@drawable/voice_nor"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/send_button_background"
                android:gravity="center"
                />
            </LinearLayout>

        </RelativeLayout>
    <ListView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/toolbar"
        android:layout_marginTop="45dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dip"
        android:scrollbars="none"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        >
    </ListView>
</RelativeLayout>
